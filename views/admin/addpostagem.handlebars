<textarea name="conteudo" id="conteudo" class="form-control"></textarea><br>
<select id="categoria" name="categoria">
    {{#each categorias}}
<option value="{{id}}">{{nome}}</option>
{{else}}
<option value="">Neunhma categoria registrada</option>
{{/each}}
</select>
<button type="submit" name="" id="" class="btn btn-success" >Criar Postagem</button>
</form>
